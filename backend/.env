# Backend Server Port
PORT=5001

# Database Configuration (Essential)
DB_HOST=localhost
DB_USER=root       # Replace with your actual MySQL username
DB_PASSWORD='Houji'     # Replace with your actual MySQL password (can be empty for default XAMPP/MAMP)
DB_DATABASE=missionview_db
DB_PORT=3306       # Default MySQL port

# Optional Database Pool Settings
# DB_CONNECTION_LIMIT=10

# JWT Configuration (Essential for Authentication)
# Generate a strong, random secret (at least 32 characters)
JWT_SECRET=YOUR_REALLY_STRONG_JWT_SECRET_HERE_32_CHARS_OR_MORE
JWT_EXPIRES_IN=1d  # Token expiration time (e.g., 1d, 7d, 1h)

# CORS Configuration (Match Frontend Origins)
CORS_ORIGIN_DEV=http://localhost:9002 # Allow frontend dev server (update port if different)
CORS_ORIGIN_PROD= # Add your production frontend URL here when deployed

# Node Environment (development or production)
NODE_ENV=development
